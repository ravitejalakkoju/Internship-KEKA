@using AddressBookV2.ViewComponents;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Address Book</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/1145022edc.js" crossorigin="anonymous"></script>
</head>
<body>
    <header class="bg-header p-2 p-md-3 navbar navbar-expand-lg">
        <a class="century-gothic fs-1 text-white" asp-area="" asp-action="Index">Address Book</a>
    </header>
    <nav class="navigation navbar navbar-expand bg-dark p-0 m-0">
        <div class="container-fluid p-0">
            <div class="small p-0 w-100" id="navbarNavAltMarkup">
                <div class="navbar-text float-right">
                    <img src="~/images/blog-icon.png" class="mr-3">
                </div>
                <div class="navbar-nav roboto me-auto p-0 m-0">
                    <a class="link text-start active" asp-controller="Employee" asp-action="Index" id="home">HOME</a>
                    <a class="link text-start" asp-controller="Employee" asp-action="Create" id="addEmployee">+ADD</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="p-0">
        <main role="main" class="pb-3">
            <div class="m-2">
                <div class="row">
                    <div class="col-12 col-md-4">
                        @await Component.InvokeAsync(nameof(EmployeeList))
                    </div>
                    <div class="col-12 col-md-7">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - AddressBook - <a asp-area="" asp-controller="Employee" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" type="text/javascript"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
