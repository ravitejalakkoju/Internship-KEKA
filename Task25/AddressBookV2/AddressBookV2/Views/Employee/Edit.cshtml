@using AddressBookV2.ViewComponents
@model EmployeeViewModel

<div class="m-1">
    <div id="employee-form-div" class="mt-3 mb-5 p-4 bg-white col-12">
        <a id="close-form" asp-action="Details" asp-controller="Employee" asp-route-id="@Model.ID"><i class="fa fa-close position-absolute" style="right: 1rem; top: 1rem;"></i></a>
        <form method="post" id="employee-form" class="col-md-12">
            <input type="hidden" asp-for="@Model.ID" />

            @await Component.InvokeAsync(nameof(EmployeeForm), Model)

            <div class="form-group col-12 d-flex justify-content-end">
                <a asp-action="Details" asp-controller="Employee" asp-route-id="@Model.ID" class="btn mr-2 btn-success rounded-0 p-1 col-md-3" id="close-button">Close</a>
                <input type="submit" value="Save" class="btn btn-success rounded-0 p-1 col-md-3" id="submit-button" />
            </div>
        </form>
    </div>
</div>
